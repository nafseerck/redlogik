<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:id="@+id/gate_pass_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPassName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                tools:text="Profiles" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/ivImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_outline_remove_red_eye_24"
                    android:layout_marginRight="10dp"
                />
                <ImageView
                    android:id="@+id/ivImageDownload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_get_app_24"
                    android:layout_marginRight="10dp"

                    />
            </LinearLayout>


        </RelativeLayout>

        <View
            android:id="@+id/viewBottom1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/gray_235" />
    </LinearLayout>
</layout>